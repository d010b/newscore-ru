{
    "version": "2.0.0",
    "configurations": [
      {
        "name": "Launch WordPress",
        "type": "php",
        "request": "launch",
        "runtimeArgs": [
          "-S",
          "localhost:8000",
          "-t",
          "${workspaceFolder}"
        ],
        "port": 8000,
        "serverReadyAction": {
          "pattern": "Development Server \\(http://localhost:([0-9]+)\\)",
          "uriFormat": "http://localhost:%s",
          "action": "openExternally"
        }
      }
    ]
  }